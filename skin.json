        "Sharp": {
          "TargetCss": {
            "affects": [".*"],
            "src": "General/Rounding Avatars/Sharp.css"
          }
        },
        "Rounded Square": {
          "TargetCss": {
            "affects": [".*"],
            "src": "General/Rounding Avatars/Rounded Square.css"
          }
        },
        "Circle": {
          "TargetCss": {
            "affects": [".*"],
            "src": "General/Rounding Avatars/Circle.css"
          }
        }
